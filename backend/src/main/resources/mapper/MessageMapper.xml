<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aiagent.mapper.MessageMapper">
    
    <resultMap id="BaseResultMap" type="com.aiagent.entity.MessageEntity">
        <id column="id" property="id"/>
        <result column="conversation_id" property="conversationId"/>
        <result column="message_id" property="messageId"/>
        <result column="role" property="role"/>
        <result column="content" property="content"/>
        <result column="model_id" property="modelId"/>
        <result column="tokens" property="tokens"/>
        <result column="duration" property="duration"/>
        <result column="metadata" property="metadata"/>
        <result column="create_time" property="createTime"/>
    </resultMap>
    
    <insert id="insert">
        INSERT INTO agent_message 
        (conversation_id, message_id, role, content, model_id, tokens, duration, metadata)
        VALUES 
        (#{conversationId}, #{messageId}, #{role}, #{content}, #{modelId}, #{tokens}, #{duration}, #{metadata})
    </insert>
    
    <select id="selectByConversationId" resultMap="BaseResultMap">
        SELECT * FROM agent_message
        WHERE conversation_id = #{conversationId}
        ORDER BY create_time ASC
        <if test="limit > 0">
            LIMIT #{limit}
        </if>
    </select>
    
    <delete id="deleteByConversationId">
        DELETE FROM agent_message WHERE conversation_id = #{conversationId}
    </delete>
    
</mapper>

